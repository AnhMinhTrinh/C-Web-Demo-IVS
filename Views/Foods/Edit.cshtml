@model WEB_DEMO.Models.Food

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mt-4">✏️Edit the cooking recipes✏️</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label  asp-for="Name" class="control-label mt-3 "></label>
                <input asp-for="Name" class="form-control mt-3" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label mt-3"></label>
                <textarea asp-for="Description" class="form-control mt-3" rows="5" style="resize: none;"></textarea>

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-4">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
