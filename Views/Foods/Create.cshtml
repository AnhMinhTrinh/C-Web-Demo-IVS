@model WEB_DEMO.Models.Food

@{
    ViewData["Title"] = "Create";
}


<h1 class="text-center mt-5 mb-5"> 🍕🍔🍟 Let's create your cooking recipes 🍷🍸🍹 </h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label mt-2"></label>
                <input asp-for="Name" class="form-control mt-3" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Description" class="control-label mt-2"></label>
                <textarea asp-for="Description" class="form-control mt-3" rows="5" style="resize: none;"></textarea>

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 ">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary mt-2" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
